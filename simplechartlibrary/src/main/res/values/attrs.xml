<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="BaseChart">
        <attr name="animationTime" format="integer"></attr>
        <attr name="titleName" format="string|reference"></attr>
        <attr name="titleSize" format="dimension|reference"></attr>
        <attr name="titleColor" format="color|reference"></attr>
    </declare-styleable>

    <declare-styleable name="PieChart">
        <attr name="contentSize" format="dimension|reference" />
        <attr name="contentColor" format="color|reference" />
        <attr name="startAngle" format="integer|reference" />
        <attr name="type" format="integer"/>
    </declare-styleable>
    
    <declare-styleable name="BaseLineChart">
        <attr name="pointLength" format="dimension|reference"/>
        <attr name="axisTextSize" format="dimension|reference"/>
        <attr name="axisLinesWidth" format="dimension|reference"/>
    </declare-styleable>

    <declare-styleable name="LineChart">
        <attr name="full" format="boolean"></attr>
        <attr name="linesColor" format="color|reference"/>
        <attr name="linesSize" format="dimension|reference"/>
        <attr name="pointColor" format="color|reference"/>
        <attr name="pointSize" format="dimension|reference"/>
    </declare-styleable>


</resources>